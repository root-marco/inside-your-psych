<div class="jumbotron">
  <h1 class="display-4">Inside your psych</h1>
</div>

<hr>

<h2>List of posts:</h2>

{{#each posts}}
<div class="card mt-4">

	<div class="card-body">

		<h3>{{title}}</h3>
		<h6>{{description}}</h6>
		<a href="/post/{{slug}}">
			<button class="btn btn-success">Read more...</button>
		</a>
		<hr>
		<small>Category: {{category.name}}</small>

	</div>

</div>

{{else}}

<h4 class="mt-5">no registered post</h4>

{{/each}}