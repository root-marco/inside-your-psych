<div class="card">
    <div class="card-body">
        {{#if post.coverImage}}
        <img src="../{{post.coverImage}}" class="image-thumbnail" style="width: 50%;">
        {{/if}}
        <h1>{{post.title}}</h1>
        <hr>
        <p style="white-space: pre-line">
            {{{post.content}}}
        </p>
    </div>
</div>

<div class="card mt-5">
    <div class="card-body">
        <form action="/post/{{post.slug}}/newComment" method="POST">
            <h2>Add a comment...</h2>
            <textarea class="form-control" rows="6" name="content"></textarea>
            <button class="btn btn-primary mt-4" type="submit">Comment</button>
        </form>
    </div>
</div>

{{#each comments}}
<div class="card mt-4">
    <div class="card-body">
        <b class="card-title">{{createdBy}}</b>
        <p class="card-text">{{content}}</p>
    </div>
</div>
{{/each}}